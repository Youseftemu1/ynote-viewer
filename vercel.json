{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/(.*)\\.(js|css|html)$",
      "dest": "/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 